{
  "dashboard": {
    "title": "AIS Tracking System",
    "panels": [
      {
        "title": "Throughput (msg/sec)",
        "targets": [
          {
            "expr": "rate(ais_messages_processed_total[1m])"
          }
        ]
      },
      {
        "title": "Latency p99",
        "targets": [
          {
            "expr": "ais_latency_p99_ms"
          }
        ]
      },
      {
        "title": "Error Rate",
        "targets": [
          {
            "expr": "rate(ais_messages_failed_db_total[5m])"
          }
        ]
      },
      {
        "title": "DLQ Size",
        "targets": [
          {
            "expr": "ais_dlq_size"
          }
        ]
      },
      {
        "title": "Circuit Breaker State",
        "targets": [
          {
            "expr": "circuit_breaker_state"
          }
        ]
      }
    ]
  }
}
