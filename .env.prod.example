# Production Environment Variables
# Copy this file to .env.prod and update with your production values
# IMPORTANT: Never commit .env.prod to version control!

# Database Configuration
POSTGRES_USER=admin
POSTGRES_PASSWORD=YOUR_STRONG_PASSWORD_HERE
POSTGRES_DB=tracking
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=YOUR_REDIS_PASSWORD_HERE
REDIS_PORT=6379

# Backend Configuration
BACKEND_PORT=3001
JWT_SECRET=YOUR_SUPER_SECRET_JWT_KEY_MINIMUM_32_CHARACTERS
JWT_EXPIRES_IN=7d

# CORS Configuration - Update with your production domain
CORS_ORIGIN=https://your-domain.com

# Application Limits
MAX_TRACKED_AIRCRAFT=100
MAX_TRACKED_VESSEL=100

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Frontend Configuration
FRONTEND_PORT=4000
NEXT_PUBLIC_API_URL=https://api.your-domain.com
NEXT_PUBLIC_WS_URL=wss://api.your-domain.com

# Optional: Admin Tools (comment out for production)
# PGADMIN_EMAIL=admin@your-domain.com
# PGADMIN_PASSWORD=YOUR_PGADMIN_PASSWORD
# PGADMIN_PORT=5050
# REDISINSIGHT_PORT=5540
