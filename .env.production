# Production Environment Configuration
# Copy this file to .env.production and update with your actual values

# ============================================
# Database Configuration (Existing Database)
# ============================================
# Use your existing database credentials
POSTGRES_USER=admin
POSTGRES_PASSWORD=Phamnam99
POSTGRES_DB=tracking
# If database is on different host, change localhost to actual host
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Database URL for Prisma (update host if database is external)
DATABASE_URL=postgresql://admin:Phamnam99@localhost:5432/tracking?schema=public&connection_limit=50&pool_timeout=10
DIRECT_DATABASE_URL=postgresql://admin:Phamnam99@localhost:5432/tracking?schema=public

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=changeme_redis_password

# ============================================
# Application Ports
# ============================================
BACKEND_PORT=3001
FRONTEND_PORT=4000

# ============================================
# Security Configuration
# ============================================
# IMPORTANT: Change these in production!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=7d

# ============================================
# Frontend URLs
# ============================================
# Update these to match your production domain
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:4000,http://localhost:3000

# ============================================
# Application Settings
# ============================================
MAX_TRACKED_AIRCRAFT=100
MAX_TRACKED_VESSEL=100

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# ============================================
# Node.js Configuration
# ============================================
NODE_ENV=production

